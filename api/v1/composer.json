{
    "name": "Oxzion",
    "description": "Oxzion's Http APIs",
    "type": "project",
    "license": "BSD-3-Clause",
    "keywords": [
        "framework",
        "mvc",
        "zf"
    ],
    "homepage": "http://oxzion.com/",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "pear",
            "url": "https://pear.horde.org"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zend-component-installer": "^1.0 || ^0.7 || ^1.0.0-dev@dev",
        "zendframework/zend-mvc": "^3.0.1",
        "zfcampus/zf-development-mode": "^3.0",
        "zendframework/zend-db": "^2.9",
        "doctrine/migrations": "^1.5",
        "zendframework/zend-json": "^3.1",
        "zendframework/zend-log": "^2.10",
        "zendframework/zend-authentication": "^2.6",
        "firebase/php-jwt": "^5.0",
        "solarium/solarium": "3.7.0",
        "php-amqplib/php-amqplib": "2.6.*",
        "wisembly/elephant.io": "^3.2",
        "eluceo/ical":"*",
        "pear-pear.horde.org/Horde_Imap_Client": "*",
        "pear-pear.horde.org/Horde_Cache": "*",
        "pear-pear.horde.org/Horde_Mime": "*",
        "pear-pear.horde.org/Horde_Nls": "*",
        "pear-pear.horde.org/Horde_Smtp": "*",
        "pear-pear.horde.org/Horde_Core": "*",
        "php-database-migration/php-database-migration" :"3.6.*",
        "php-mime-mail-parser/php-mime-mail-parser": "~2.0",
        "ezyang/htmlpurifier": "~4.7",
        "google/apiclient": "^2.0",
        "rlanvin/php-rrule": "1.*",
        "league/oauth2-client": "2.*",
        "microsoft/microsoft-graph": "1.0.*",
        "thiagoalessio/tesseract_ocr": "1.2.0",
        "elasticsearch/elasticsearch": "~5.0",
        "twilio/sdk" : "*",
        "behat/behat":"*",
        "cosenary/instagram":"*",
        "abraham/twitteroauth":"*",
        "authorizenet/authorizenet": "~1.9.7",
        "facebook/graph-sdk":"*",
        "zendframework/zend-permissions-rbac": "^2.6",
        "zendframework/zend-mail": "^2.10"
    },
    "require-dev" : {
        "phpunit/phpunit": "5.*.*",
        "zendframework/zend-test": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Oxzion\\": "lib/Oxzion/src/",
            "Application\\": "module/Application/src/",
            "Metaform\\": "module/Metaform/src/",
            "Field\\": "module/Field/src/",
            "Auth\\": "module/Auth/src/",
            "Avatar\\": "module/Avatar/src/",
            "Calendar\\": "module/Calendar/src/",
            "App\\": "module/App/src/",
            "Announcement\\": "module/Announcement/src/",
            "Bookmark\\": "module/Bookmark/src/",
            "Chat\\": "module/Chat/src/",
            "Group\\": "module/Group/src/",
            "Leaderboard\\": "module/Leaderboard/src/",
            "Organization\\": "module/Organization/src/",
            "Tile\\": "module/Tile/src/",
            "Search\\": "module/Search/src/",
            "File\\": "module/File/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApplicationTest\\": "module/Application/test/",
            "MetaformTest\\": "module/Metaform/test/",
            "FieldTest\\": "module/Field/test/",
            "AuthTest\\" : "module/Auth/test"
        }
    },
    "extra": [],
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "post-create-project-cmd": [
            "@development-enable"
        ],
        "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
    }
}
